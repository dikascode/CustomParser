<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dimen_24dp"
        android:text="@string/tlv_parser_title"
        android:textColor="?android:colorPrimary"
        android:textSize="@dimen/text_30sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/tlvInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:autofillHints=""
        android:backgroundTint="?android:colorAccent"
        android:hint="@string/enter_tlv_data"
        android:inputType="text"
        android:padding="@dimen/dimen_12dp"
        android:textSize="@dimen/text_16sp" />

    <Button
        android:id="@+id/parseButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:backgroundTint="?android:colorPrimary"
        android:padding="@dimen/dimen_12dp"
        android:text="@string/parse"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_18sp" />


    <TextView
        android:id="@+id/parsedOutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:gravity="center"
        android:lineHeight="@dimen/dimen_40dp"
        android:paddingTop="@dimen/dimen_16dp"
        android:text=""
        android:textAllCaps="true"
        android:textColor="?android:colorPrimary"
        android:textSize="@dimen/text_18sp"
        android:textStyle="bold" />

</LinearLayout>
